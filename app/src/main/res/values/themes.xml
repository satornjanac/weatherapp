<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.WeatherForcastApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="WFTitle">
        <item name="android:textSize">@dimen/wfText20</item>
        <item name="android:textColor">@color/wfTextColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="WFTitle.WFCurrentTemp">
        <item name="android:textSize">@dimen/wfTextHuge</item>
    </style>

    <style name="WFSubTitle">
        <item name="android:textSize">@dimen/wfTextMedium</item>
        <item name="android:textColor">@color/wfTextMutedColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingMultiplier">1</item>
    </style>
</resources>